package day15;

import java.util.Scanner;

public class SaleMain {

	public static void main(String[] args) {
		/* sale 클래스 생성 => 제네릭으로 생성
		 * main
		 * 1. 메뉴추가 | 2. 메뉴보기 | 3. 제품주문 | 4. 주문내역보기 | 5. 종료
		 */
		
		Scanner scan = new Scanner(System.in);
		SaleController sc = new SaleController();
		
		int menu = 0;
		while(true) {
			System.out.println("1. 메뉴 추가 | 2. 메뉴 보기 | 3. 제품 주문 | 4. 주문내역 보기 | 5. 종료");
			System.out.println(">> 메뉴 선택 >>");
			menu = scan.nextInt();
			
			if(menu == 5) {
				System.out.println("종료합니다.");
				break;
			}
			if(menu > 5 || menu <= 0) {
				System.out.println("잘못된 메뉴입니다.");
				System.out.println("메뉴를 다시 선택해주세요.");
				continue;
			}
			
			switch(menu) {
			case 1: sc.add(scan); break;
			case 2: sc.print(); break;
			case 3: sc.order(scan); break;
			case 4: sc.orderPrint(); break;
			case 5: sc.add(scan); break;
			default:
				System.out.println("잘못된 메뉴입니다.");
			}
			
		}
		
	}
}
