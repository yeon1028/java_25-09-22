		int sum = 0;
		int count = 0;
		double ave = 0;
		
		System.out.println("숫자를 입력해주세요: ");
		while(true) {
			int num = sc.nextInt();
			if (num <= 0) {
				System.out.println("프로그램을 종료합니다.");
				break;
			}
			sum += num;
			count++;
			
		}
		System.out.println("합계는 " + sum);
		System.out.println("평균은 " + (double)(sum/count));
		
		
		
		
		
		
		
		
		
	}

}
