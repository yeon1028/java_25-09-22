package day15_examStudent;

import java.util.ArrayList;
import java.util.List;

public class Student {
	// 멤버변수 : 학번, 이름, 나이, 전화번호, 주소
	// 수강과목(Subject[5] class)
	// 수강과목을 추가하는 메서드
	// 수강과목을 취소하는 메서드
	// 수강배열을 출력하는 메서드
	// 학생정보를 출력하는 메서드
	
	private int id;
	private String name;
	private int age;
	private String phone;
	private String add;
	
	private List<Subject> subject = new ArrayList<>();
	
	
	public Student() { }
	
	public Student(int id, String name, int age, String phone, String add) {
		this.id = id;
		this.name = name;
		this.age = age;
		this.phone = phone;
		this.add = add;
	}
	
	// 배열[i] => list.get(i)
	public void insertSubject(Subject sub) {
		
		// 이미 수강신청을 한 과목일 경우
		for(int i=0; i<subject.size(); i++) {
			if(subject.get(i).getSubject().equals(sub.getSubject())) {
				System.out.println("이미 추가한 과목입니다.");
				return;
			}
		}
		subject.add(sub);
	}
	
	// ★ 과목번호를 주면 그 과목번호를 삭제하는 메서드 추가
	public void deleteSubject(int code) {
		int index = -1;
		if(code == 0) {
			return;
		}
		subject.remove(index);
		
		if(index == -1) {
			// 찾는 값이 없다면
			System.out.println("찾는 과목이 없습니다.");
			return;
		}
	}
	
	
	// 내 정보를 출력하는 메서드
	public void printInfo() {
		System.out.println(name+" ("+id+" / "+age);
	}

	

	@Override
	public String toString() {
		return "학번: " + id + ", 이름: " + name + ", 나이: " + age 
				+ ", 전화번호: " + phone + ", 주소: " + add;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public String getPhone() {
		return phone;
	}

	public void setPhone(String phone) {
		this.phone = phone;
	}
	
	public String getAdd() {
		return add;
	}
	
	public void setAdd(String add) {
		this.add = add;
	}


}
