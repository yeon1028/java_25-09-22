package day18_Bank;

import java.util.Scanner;

public class BankController {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		BankController bc = new BankController();
		
		// 은행설정
		bc.addBank();
		
		// 고객 등록 (통장 파일 자동 관리)
