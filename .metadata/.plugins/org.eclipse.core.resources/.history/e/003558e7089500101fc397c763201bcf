			System.out.println("2. 출금");
			System.out.println("3. 송금");
			System.out.println("4. 계좌 확인");
			System.out.println("5. 종료");
			System.out.println("선택: ");
			int choice = scan.nextInt();
			
			if (choice == 5) {
				System.out.println("종료합니다.");
				break;
			}
			
			switch (choice) {
			case 1: break;
			case 2: break;
			case 3: break;
			case 4: break;
			case 5: break;			
			}
			
			
		}

	} //main

