		System.out.println("menu >>");
		
		return scan.nextInt();
	}

	public void addWord() {
		// 기본 단어 추가
		
		Word w = new Word("dog");
		List<String> tmp = new ArrayList<>();
		tmp.add("강아지");
		tmp.add("개");
		tmp.add("바둑이");
		w.setMean(tmp);
		
		List<String> tmp2 = new ArrayList<>();
		wordBook.add(w);
		
		tmp2.add("고양이");
		tmp2.add("야옹이");
		tmp2.add("나비");
		Word w2 = new Word("cat", tmp2);
		
	}

