package day14;

import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class MapEx01 {

	public static void main(String[] args) {
		// map을 활용한 단어장 프로그램 작성
		 /* 1. 단어등록 | 2. 단어검색 | 3. 단어수정 | 4. 단어출력 | 5. 단어삭제 | 6. 종료
		 * WordController 생성하여 Map을 멤버변수로 선언하여 메서드로 구현
		 * 기본단어 5가지 등록
		 * 
		 * 기본적인 CRUD
		 * C : create (생성) => 등록, 추가
		 * R : read (읽기) => 조회, 전체 출력
		 * U : update (수정)
		 * D : delete (삭제)
		 */

		MapEx01 m = new MapEx01();
		while (true) {
			
			System.out.println("1. 단어등록 | 2. 단어검색 | 3. 단어수정 | 4. 단어출력 | 5. 단어삭제 | 6. 종료");
			System.out.println("카테고리 선택 > ");
			Scanner sc = new Scanner(System.in);
			
			int choice = sc.nextInt();
			sc.nextLine();
			
			switch (choice) {
			case 1: m.register(); break;
			case 2: m.search(); break;
			case 3: m.change(); break;
			case 4: m.print(); break;
			case 5: m.delete(); break;
			case 6: System.out.println("단어장을 종료합니다.");
			default: System.out.println("잘못된 카테고리 선택입니다. \n다시 선택해주세요!");
			}
		}
		
		
	} // main
	
	
	Map<String, String> word = new HashMap<>();
	Scanner sc = new Scanner(System.in);
	
	public MapEx01() {
		word.put("apple", "사과");
		word.put("peach", "복숭아");
		word.put("strawberry", "딸기");
		word.put("dog", "강아지");
		word.put("cat", "고양이");
	}
	
	public void register() {
		System.out.println("등록할 단어 입력 >> ");
		String word1 = sc.next();
			
		System.out.println("단어의 뜻: ");
		String mean1 = sc.next();
		word.put(word1, mean1);
		System.out.println("단어가 성공적으로 등록되었습니다.");
	}
		
	public void search() {
		System.out.println("검색할 단어 입력 >> ");
		String word2 = sc.next(); 
		if(word.containsKey(word2)) {
			System.out.println(word2 + " : " + word.get(word2));
			return;
		}
		System.out.println("검색한 단어가 없습니다.");
		
	}
		
	public void change() {
		System.out.println("수정할 단어 입력 >> ");
		String word3 = sc.next();
		if(word.containsKey(word3)) {
			System.out.println("단어의 뜻: ");
			String mean1 = sc.next();
			word.put(word3, mean1);
			System.out.println("수정 완료");
			return;
		}
		System.out.println("수정할 단어가 없습니다.");
	}
	
	public void print() {
		System.out.println("- - 등록된 단어 목록 - -");
		
		
	}
	
	public void delete() {
		System.out.println("삭제할 단어 입력 >> ");
		String word5 = sc.next();
		if(word.containsKey(word5)) {
			word.remove(word5);
			System.out.println(word + "를 삭제했습니다.");
		}
		System.out.println("삭제할 단어가 존재하지 않습니다.");
	}
		
		
} // class

	
	
	
	
	

